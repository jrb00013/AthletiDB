# TheSportsDB API Configuration (Required for live data)
THESPORTSDB_API_KEY=1
THESPORTSDB_RATE_LIMIT=30  # requests per minute (free tier)
THESPORTSDB_BASE_URL=https://www.thesportsdb.com/api/v1/json

# Database Configuration
DATABASE_URL=sqlite:///sports_data.db
CSV_EXPORT_DIR=exports

# Data Source Configuration
ENABLE_LIVE_API=true  # Set to false to use only local data
ENABLE_NFLVERSE=true  # NFL data from git submodule
ENABLE_HISTORICAL_CSV=true  # Historical CSV data

# Rate Limiting and Caching
CACHE_DURATION=3600  # seconds (1 hour)
REQUEST_TIMEOUT=30   # seconds
MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=sports_pipeline.log

# Optional External API Keys (for additional data sources)
# BALDONTLIE_API_KEY=insert_key_here
# ESPN_API_KEY=insert_keyhere
# SPORTRADAR_API_KEY=insert_key_here

# Upset tracking configuration (optional)
UPSET_THRESHOLD=0.3
MIN_ODDS_FOR_UPSET=2.0